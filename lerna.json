{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*", "examples/*"],
  "useNx": true,
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "noPush": true,
      "conventionalCommits": true
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore: publish",
      "registry": "https://npm.pkg.github.com",
      "ignoreChanges": ["**/*.md"]
    }
  }
}
