{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["apps/*", "packages/*", "examples/*"],
  "useNx": false,
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore: publish",
      "ignoreChanges": ["**/*.md"]
    }
  }
}
